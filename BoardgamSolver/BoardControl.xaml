<UserControl x:Class="BoardgamSolver.BoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoardgamSolver"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="2" BorderBrush="Black">
        <Grid>
            <Grid.Resources>
                <local:TokenConverter x:Key="tokenConverter"></local:TokenConverter>
                <local:BackgroundConverter x:Key="backgroundConverter"></local:BackgroundConverter>

            </Grid.Resources>
