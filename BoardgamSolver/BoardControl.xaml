                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path='[0].Number', FallbackValue='_', Converter={StaticResource tokenConverter}}" Background="{Binding Path='[0]', Converter={StaticResource backgroundConverter}}" Tag="0"></TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path='[1].Number', FallbackValue='_', Converter={StaticResource tokenConverter}}" Background="{Binding Path='[1]', Converter={StaticResource backgroundConverter}}" Tag="1"></TextBlock>
